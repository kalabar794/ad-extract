{
  "name": "competitive-ads-extractor",
  "version": "1.0.0",
  "description": "CLI and GUI tool for extracting competitive advertising intelligence from ad libraries",
  "main": "dist/cli.js",
  "bin": {
    "ad-extractor": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "serve": "ts-node src/server/index.ts",
    "mcp": "node dist/mcp/index.js",
    "mcp:dev": "ts-node src/mcp/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "install-browsers": "playwright install chromium"
  },
  "keywords": [
    "advertising",
    "competitive-intelligence",
    "meta-ads",
    "tiktok-ads",
    "google-ads",
    "playwright",
    "scraper"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.13.2",
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0",
    "compromise": "^14.14.0",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.21.0",
    "markdown-it": "^14.1.0",
    "natural": "^8.0.1",
    "playwright": "^1.49.0",
    "playwright-extra": "^4.3.6",
    "puppeteer": "^24.33.0",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/natural": "^5.1.5",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
